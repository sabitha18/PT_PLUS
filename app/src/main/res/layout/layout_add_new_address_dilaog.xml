<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/primary_color"
    android:backgroundTint="@color/primary_color"

    app:cardCornerRadius="@dimen/standard_10"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/fontBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="New Address"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/img_new_address_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_close_24" />
                </LinearLayout>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/standard_20"
                android:layout_marginLeft="@dimen/standard_20"
                android:layout_marginTop="@dimen/standard_10"
                android:layout_marginEnd="@dimen/standard_20"
                android:backgroundTint="@color/primary_color"
                app:cardCornerRadius="@dimen/standard_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/all_side_grey_border"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/standard_5"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="1000dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_camera" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/standard_10"
                        android:layout_weight=".7"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Avatar"
                            android:textColor="@color/white" />

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It can be an emoji or an image"
                            android:textColor="@color/white"
                            android:textSize="@dimen/standard_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_forword_grey_arrow" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/standard_20"
                android:layout_marginLeft="@dimen/standard_20"
                android:layout_marginTop="@dimen/standard_10"
                android:layout_marginEnd="@dimen/standard_20"
                android:backgroundTint="@color/primary_color"
                app:cardCornerRadius="@dimen/standard_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/all_side_grey_border"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/standard_5"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="1000dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_location_black" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/standard_10"
                        android:layout_weight=".7"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address Title"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_forword_grey_arrow" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/standard_20"
                android:layout_marginLeft="@dimen/standard_20"
                android:layout_marginTop="@dimen/standard_10"
                android:layout_marginEnd="@dimen/standard_20"
                android:backgroundTint="@color/primary_color"
                app:cardCornerRadius="@dimen/standard_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/all_side_grey_border"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/standard_5"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="1000dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_map" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/standard_10"
                        android:layout_weight=".7"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deliver to a Different Location"
                            android:textColor="@color/white" />

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Choose Location on Map"
                            android:textColor="@color/white"
                            android:textSize="@dimen/standard_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_forword_grey_arrow" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="@dimen/standard_20"
                android:layout_marginLeft="@dimen/standard_20"
                android:layout_marginTop="@dimen/standard_10"
                android:layout_marginEnd="@dimen/standard_20"
                android:backgroundTint="@color/primary_color"
                app:cardCornerRadius="@dimen/standard_5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="@drawable/all_side_grey_border"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="@dimen/standard_5"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="1000dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_map_pin" />

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="@dimen/standard_10"
                        android:layout_weight=".7"
                        android:gravity="center|start"
                        android:orientation="vertical">

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use My Current Location"
                            android:textColor="@color/white" />

                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4th Floor, Al Zumorrodah Tower..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/standard_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_forword_grey_arrow" />
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_20"
                android:orientation="vertical">

                <TextView
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Complete Address"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey_text_color"

                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Floor (Optional)"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey_text_color"

                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <TextView
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Mobile Number"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey_text_color"

                    android:textColor="@color/white"
                    tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <TextView
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Email ID"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey_text_color"

                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                <TextView
                    style="@style/fontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tag This Location For Later"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/standard_10"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_home"
                        style="@style/My_Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/standard_5"
                        android:checked="true"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/standard_5"
                        android:text="Home"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standard_10"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:chipIconVisible="true"
                        app:chipStrokeColor="@color/border_color_light"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_work"
                        style="@style/My_Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/standard_5"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/standard_5"
                        android:text="Work"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standard_10"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:chipIconVisible="true"
                        app:chipStrokeColor="@color/border_color_light"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_officer"
                        style="@style/My_Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/standard_5"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/standard_5"
                        android:text="Office"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standard_10"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:chipIconVisible="true"
                        app:chipStrokeColor="@color/border_color_light"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_other"
                        style="@style/My_Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginEnd="@dimen/standard_5"
                        android:layoutDirection="rtl"
                        android:padding="@dimen/standard_5"
                        android:text="Other"
                        android:textAllCaps="true"
                        android:textSize="@dimen/standard_10"
                        android:theme="@style/Theme.MaterialComponents.Light"
                        app:chipIconVisible="true"
                        app:chipStrokeColor="@color/border_color_light"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

                </LinearLayout>


                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/standard_35"
                    android:background="@drawable/product_qty_controle"
                    android:gravity="center"
                    android:text="Add Address"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.cardview.widget.CardView>