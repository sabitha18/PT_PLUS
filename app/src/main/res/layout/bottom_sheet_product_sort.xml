<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/fontBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/sort"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#50505069" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_featured"
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:buttonTint="@color/white"

                    android:layoutDirection="rtl"
                    android:text="@string/featured"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radio_newest"
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:buttonTint="@color/white"

                    android:layoutDirection="rtl"
                    android:text="@string/newest"
                    android:textColor="@color/white" />
                <RadioButton
                    android:id="@+id/radio_low_to_hign"
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:buttonTint="@color/white"

                    android:layoutDirection="rtl"
                    android:text="@string/price_low_to_high"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/radio_high_to_low"
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/white"
                    android:buttonTint="@color/white"

                    android:layoutDirection="rtl"
                    android:text="@string/price_high_to_low"
                    android:textColor="@color/white" />


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/secondary_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/standard_10"
            android:paddingBottom="@dimen/standard_10"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.cardview.widget.CardView
                android:id="@+id/carview_submit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/standard_20"
                android:layout_marginEnd="@dimen/standard_20"
                android:background="@color/primary_color"
                app:cardBackgroundColor="@color/primary_color"
                app:cardCornerRadius="25dp">

                <TextView
                    style="@style/fontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/apply"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>