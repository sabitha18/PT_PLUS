<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_block"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="@dimen/standard_15"
        android:background="@color/secondary_color"
        android:backgroundTint="@color/secondary_color"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="@dimen/standard_5"
            android:layout_width="match_parent"
            android:weightSum="1"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="@dimen/standard_15"
                app:cardCornerRadius="@dimen/standard_15"
                android:background="@color/secondary_color"
                android:backgroundTint="@color/secondary_color"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_title"
                        style="@style/fontRegular"
                        android:layout_width="0dp"
                        android:layout_weight=".6"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_5"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:minLines="2"
                        android:singleLine="false"
                        android:text="dfdsfsdf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/standard_10"
                        tools:ignore="Suspicious0dp" />
                    <TextView
android:id="@+id/txt_remove_cart"
                        style="@style/fontRegular"
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:paddingEnd="@dimen/standard_10"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/standard_5"
                      android:layout_gravity="top|end"
                        android:gravity="top|end"


                        android:text="@string/remove"
                        android:textColor="@color/white"
                        android:textSize="@dimen/standard_10"
                        tools:ignore="Suspicious0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".5">
                        <TextView
                            style="@style/fontRegular"
                            android:layout_width="match_parent"
                            android:paddingEnd="@dimen/standard_10"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/standard_5"
                            android:gravity="start"

                            android:text="Net-weight: 10kg"
                            android:textColor="@color/white"
                            android:textSize="@dimen/standard_10"
                            tools:ignore="Suspicious0dp" />
                        <TextView
android:id="@+id/txt_price"
                            style="@style/fontBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/standard_5"
                            android:text="KD 0.000"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_gravity="bottom|end"
                        android:gravity="bottom|end"
                        android:layout_height="match_parent"
                        android:layout_weight=".5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/product_qty_controle"
                            android:padding="@dimen/standard_5">

                            <ImageView
                                android:id="@+id/img_decriment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".2"
                                android:paddingLeft="@dimen/standard_5"
                                android:src="@drawable/ic_baseline_horizontal_rule_24" />

                            <TextView
                                android:id="@+id/txt_qty"
                                style="@style/fontRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/standard_10"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/standard_5"
                                android:paddingRight="@dimen/standard_5"
                                android:text="1"
                                android:textColor="@color/grey_text_color"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/img_increment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight=".2"
                                android:paddingLeft="@dimen/standard_5"
                                android:src="@drawable/ic_baseline_add_24" />
                        </LinearLayout>

                    </LinearLayout>







                </LinearLayout>
            </LinearLayout>




        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>