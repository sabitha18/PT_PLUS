<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_5"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_block"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:background="@color/secondary_color"
        android:backgroundTint="@color/secondary_color"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight=".63"
                android:adjustViewBounds="true"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".32"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_title"

                    style="@style/fontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_5"
                    android:gravity="center_vertical"
                    android:lines="2"
                    android:minLines="2"
                    android:singleLine="false"
                    android:text="dfdsfsdf"
                    android:textColor="@color/white"
                    android:textSize="@dimen/standard_10" />

                <TextView
                    android:id="@+id/txt_price"
                    style="@style/fontBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/standard_5"
                    android:text="KD 0.000"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_buy_now"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight=".8"
                        android:background="@color/primary_color"
                        android:gravity="center"
                        android:text="@string/buy_now"
                        android:textColor="@color/white" />

                    <ImageView


                        android:id="@+id/add_to_wish_list"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_weight=".2"
                        android:src="@drawable/ic_fav" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>