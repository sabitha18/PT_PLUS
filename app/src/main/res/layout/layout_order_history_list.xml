<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnr_main"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_20"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/border_color"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/standard_5"
                android:layout_marginEnd="@dimen/standard_5"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@color/border_color"
                    android:backgroundTint="@color/border_color"
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
android:id="@+id/img_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_product_2" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/standard_10"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
android:id="@id/txt_product_name"
                        style="@style/fontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="@dimen/standard_5"
                        android:text="LCD Screen Curve  \n TreadmillWill"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
android:id="@+id/txt_qty"
                        style="@style/fontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_5"
                        android:text="Qty : 1"
                        android:textColor="@color/grey_text_color"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <TextView
android:id="@+id/txt_extra_information"
                        style="@style/fontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_5"

                        android:textColor="@color/grey_text_color"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".3"
                    android:gravity="right"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_amount"
                        style="@style/fontBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_20"
                        android:layout_marginEnd="@dimen/standard_10"
                        android:gravity="end"
                        android:text="KD 0.000"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_vertical"
                        android:layout_marginTop="@dimen/standard_10"
                        android:background="@color/secondary_color"
                        android:backgroundTint="@color/primary_color"
                        android:gravity="center|center_vertical"
                        android:paddingStart="@dimen/standard_5"
                        android:paddingEnd="@dimen/standard_10"

                        app:cardCornerRadius="16dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/standard_10">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_eye" />

                            <TextView

                                style="@style/fontRegular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/standard_5"

                                android:gravity="center|center_vertical"
                                android:text="@string/view"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/standard_10"
                android:background="@color/grey_dark"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/standard_10">

                <TextView
                    android:id="@+id/txt_date"
                    style="@style/fontRegular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/standard_10"

                    android:text="Order on: Tuesday, Oct 9, 2022"
                    android:textColor="#E5E5E5"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end|right"
                    android:gravity="center_vertical|end|right">

                    <TextView
                        style="@style/fontRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/standard_5"
                        android:layout_marginEnd="@dimen/standard_10"
                        android:text="@string/track_order"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>