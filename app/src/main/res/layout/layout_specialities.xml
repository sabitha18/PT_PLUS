<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary_color"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/standard_10"
        tools:ignore="MissingConstraints">
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"


    android:layout_marginEnd="@dimen/standard_10"
    android:layout_marginStart="@dimen/standard_20"
    android:src="@drawable/ic_round_bg_arrow"/>
        <TextView
android:id="@+id/txt_title"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/fontRegular"
            android:text="Strength and conditioning coach"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>