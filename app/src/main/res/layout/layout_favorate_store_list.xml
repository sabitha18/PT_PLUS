<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnr_main"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/standard_10"

    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/standard_10"

                android:layout_marginEnd="@dimen/standard_10"
                android:background="@drawable/borderd_small_curve_black_bg_with_grey_border"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_group_block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/border_color"
                    android:backgroundTint="@color/border_color"
                    app:cardCornerRadius="25dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_trainer_4" />


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/standard_10"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_5"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_name"
                            style="@style/fontRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Olympic Rubber Bumper Plates - Pair"
                            android:textColor="@color/white"
                            android:textSize="14dp" />




                    </LinearLayout>




                    <TextView
                        android:id="@+id/txt_price"
                        style="@style/fontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/standard_5"
                        android:text="KD 0.000"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".4"
                    android:gravity="right"
                    android:orientation="vertical">

                    <TextView
android:id="@+id/txt_remove"
                        style="@style/fontRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="@dimen/standard_5"
                        android:layout_marginEnd="@dimen/standard_10"
                        android:gravity="center|end"
                        android:text="Remove"
                        android:textColor="@color/white"
                        android:textSize="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="end|bottom"
                        android:gravity="bottom|end"
                        android:layout_height="match_parent">
                        <androidx.cardview.widget.CardView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:background="@color/secondary_color"
                            android:backgroundTint="@color/primary_color"

                            android:paddingStart="@dimen/standard_5"
                            android:paddingEnd="@dimen/standard_10"
                            app:cardCornerRadius="16dp"
                            app:cardUseCompatPadding="true">


                            <LinearLayout
                                android:id="@+id/lnr_add_tocart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:padding="@dimen/standard_10">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/ic_eye" />

                                <TextView

                                    style="@style/fontRegular"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/standard_5"

                                    android:gravity="center|center_vertical"
                                    android:text="Add To Cart"
                                    android:textColor="@color/white"
                                    android:textSize="8dp" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>