<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_10"

    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_group_block"
        android:layout_width="match_parent"
        android:layout_height="140dp"

        android:background="@color/secondary_color"
        android:backgroundTint="@color/secondary_color"
        app:cardCornerRadius="@dimen/standard_10"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:padding="@dimen/standard_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_10"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">
                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/no_image" />
                </androidx.cardview.widget.CardView>



                <TextView
                    android:id="@+id/txt_name"
                    style="@style/fontRegular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/standard_10"
                    android:gravity="center_vertical"
                    android:text="Sharon Jem"
                    android:textColor="@color/white" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_review"
                style="@style/fontRegular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/standard_10"

                android:textSize="@dimen/standard_10"
                android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et."
                android:textColor="@color/white" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>